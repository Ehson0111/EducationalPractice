<Page x:Class="цдовым.Pages.Rabotadatel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:цдовым.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rabotadatel"
      Loaded="Page_Loaded">

    <Grid>
        <!-- ScrollViewer для прокрутки списка -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <!-- ItemsControl для отображения карточек -->
            <ItemsControl Name="ItemsControlOtkliki" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Простая карточка отклика -->
                        <Border BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="5" Margin="0,5" Padding="10" Background="#FFF0F0F0">
                            <StackPanel>
                                <!-- Заголовок карточки -->
                                <TextBlock Text="Отклик на вакансию" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                                <!-- Информация о соискателе -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Соискатель: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SoiskatelName}"/>
                                </StackPanel>

                                <!-- Информация о вакансии -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Вакансия: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding VakansiyaName}"/>
                                </StackPanel>

                                <!-- Дата отклика -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Дата отклика: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding data_otklik, StringFormat='dd.MM.yyyy HH:mm'}"/>
                                </StackPanel>

                                <!-- Статус отклика -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Статус: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Path=status.status_naimenovanit}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>