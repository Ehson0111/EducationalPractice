<Page x:Class="цдовым.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:цдовым.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho"
      Background="#F4F7FB">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" CornerRadius="15" Background="White" Padding="30" BorderBrush="#2D6A4F" BorderThickness="2" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Foreground="#2D6A4F" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Логин" FontWeight="SemiBold"/>
                <TextBox x:Name="tbLogin" Margin="0,5,0,15" Height="30" Background="#EFF3F8"/>

                <TextBlock Text="Пароль" FontWeight="SemiBold"/>
                <TextBox x:Name="tbPassword" Margin="0,5,0,15" Height="30" Background="#EFF3F8"/>

                <TextBlock x:Name="tblCaptcha" Text="Капча" Visibility="Hidden" Margin="0,0,0,5"/>
                <TextBox x:Name="tbCaptcha" Visibility="Hidden" Margin="0,0,0,15" Height="30"/>

                <Label x:Name="labelcode" Visibility="Hidden" Content="Код подтверждения"/>
                <TextBox x:Name="tbcode" Visibility="Hidden" Margin="0,0,0,15" Height="30"/>

                <TextBlock x:Name="tbTimeLeft" Width="200" Foreground="Red" Visibility="Visible" Margin="0,0,0,5"/>
                <TextBlock x:Name="tbTimer" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnEnterGuest" Content="Гость" Width="120" Margin="5" Height="36" Click="btnEnterGuest_Click" Background="#B7E4C7" BorderBrush="#2D6A4F" Cursor="Hand"/>
                    <Button x:Name="btnEnter" Content="Войти" Width="120" Margin="5" Height="36" Click="btnEnter_Click" Background="#95D5B2" BorderBrush="#2D6A4F" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>

