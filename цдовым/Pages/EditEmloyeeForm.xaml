<Page x:Class="цдовым.Pages.EditEmloyeeForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:цдовым.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="484.694"
      Title="EditEmloyeeForm">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Image Section -->
        <Image Grid.Column="2" Grid.Row="0" Grid.RowSpan="4"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Width="120" 
               Height="120"
               Margin="10"
               Stretch="Uniform"
               Source="/Resourced/OIP.jpg"/>

        <!-- Input Fields -->
        <!-- First Name -->
        <Label Grid.Row="0" Grid.Column="0" 
               Content="Имя:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 x:Name="txtFirstName" 
                 Text="{Binding Imya}" 
                 Margin="5,2"
                 BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Last Name -->
        <Label Grid.Row="1" Grid.Column="0" 
               Content="Фамилия:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Familiya}" 
                 x:Name="txtLastName" 
                 Margin="5,2"
                 BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Middle Name -->
        <Label Grid.Row="2" Grid.Column="0" 
               Content="Отчество:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Otchestvo}" 
                 x:Name="txtMiddleName" 
                 Margin="5,2"
                 BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Contacts -->
        <Label Grid.Row="3" Grid.Column="0" 
               Content="Контактные данные:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <Grid Grid.Row="3" Grid.Column="1" Margin="5,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
                     Text="{Binding kontakti}"  
                     x:Name="txtContactData" 
                     BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
            <TextBox Grid.Column="2" 
                     Text="{Binding email}" 
                     x:Name="txtemail"    
                     BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
        </Grid>

        <!-- Position -->
        <Label Grid.Row="4" Grid.Column="0" 
               Content="Должность:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <ComboBox Grid.Row="4" Grid.Column="1"
                  x:Name="cbDolzhnost"
                  DisplayMemberPath="Dolzhnoest_namimenovanie"
                  SelectedValuePath="id_dolzhnost"
                  SelectedValue="{Binding id_dolzhnost}"
                  Margin="5,2"
                  BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Login/Password -->
        <Label Grid.Row="5" Grid.Column="0" 
               Content="Логин/Пароль:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <Grid Grid.Row="5" Grid.Column="1" Margin="5,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
                     Text="{Binding authorization.login}" 
                     x:Name="txtLogin" 
                     BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
            <TextBox Grid.Column="2"  
                     Text="{Binding authorization.password}"  
                     x:Name="pbPassword" 
                     BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
        </Grid>

        <!-- Salary -->
        <Label Grid.Row="6" Grid.Column="0" 
               Content="Зарплата:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <TextBox Grid.Row="6" Grid.Column="1" 
                 Text="{Binding zarplata}" 
                 x:Name="txtSalary" 
                 Margin="5,2"
                 BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Birth Date -->
        <Label Grid.Row="7" Grid.Column="0" 
               Content="Дата рождения:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <DatePicker Grid.Row="7" Grid.Column="1" 
                    SelectedDate="{Binding data_rozhdenie}" 
                    x:Name="dpBirthday" 
                    Margin="5,2"
                    BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Gender -->
        <Label Grid.Row="8" Grid.Column="0" 
               Content="Пол:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <ComboBox Grid.Row="8" Grid.Column="1"
                  x:Name="cbpol"
                  DisplayMemberPath="pol1"
                  SelectedValuePath="id_pol"
                  SelectedValue="{Binding id_pol}"
                  Margin="5,2"
                  BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Passport -->
        <Label Grid.Row="9" Grid.Column="0" 
               Content="Паспорт:" 
               VerticalAlignment="Center"
               Foreground="#FF1D869A"
               Margin="0,2"/>
        <TextBox Grid.Row="9" Grid.Column="1" 
                 Text="{Binding pasportnie_dannie}" 
                 x:Name="txtpasport" 
                 Margin="5,2"
                 BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>

        <!-- Photo Button -->
        <Button Grid.Column="2" Grid.Row="4"
                Content="Добавить фото"  
                Margin="10"
                VerticalAlignment="Top" 
                Background="#FFB0B0BF" 
                BorderBrush="#FF3ADFFF" 
                Padding="5"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="12" Grid.Column="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <Button Content="Сохранить" 
                    Click="BtnSave_Click" 
                    Margin="5" 
                    Padding="20,3"
                    Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
            <Button x:Name="CLEAR" 
                    Click="CLEAR_Click" 
                    Content="Очистить" 
                    Margin="5" 
                    Padding="20,3"
                    Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
        </StackPanel>
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Left" Margin="14,16,0,0" Grid.Row="12" VerticalAlignment="Top"/>
    </Grid>
</Page>