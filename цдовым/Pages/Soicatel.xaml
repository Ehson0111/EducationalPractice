<Page x:Class="цдовым.Pages.Soicatel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:цдовым.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Soicatel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="56"/>
            <RowDefinition />
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <TextBox Name="txtSearch" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" 
                 Margin="5,0,5,0" TextChanged="txtSearch_TextChanged" Grid.ColumnSpan="2"/>

        <ComboBox Name="cmbSorting" Grid.Row="1" Grid.Column="2" SelectedIndex="0" 
                  VerticalAlignment="Center" Margin="5,0,5,0" SelectionChanged="cmbSorting_SelectionChanged">
            <ComboBoxItem>Без сортировки</ComboBoxItem>
            <ComboBoxItem>Возрастание</ComboBoxItem>
            <ComboBoxItem>Убывание</ComboBoxItem>
        </ComboBox>

        <ComboBox Name="cmbFilter" Grid.Row="1" Grid.Column="3" SelectedIndex="0"  
                 Margin="5,0,5,0" VerticalAlignment="Center" SelectionChanged="cmbFilter_SelectionChanged">
            <ComboBoxItem>Все</ComboBoxItem>
            <ComboBoxItem>Меньше 100к</ComboBoxItem>
            <ComboBoxItem>Больше</ComboBoxItem>
        </ComboBox>

        <ListView Name="LViewProduct" Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="3" 
                 Margin="5,22,5,10" SelectionChanged="LViewProduct_SelectionChanged"
                 BorderThickness="2,2,2,2" ClipToBounds="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Background="{Binding BackGround}">
                        <Grid>
                            <!-- Добавлена новая колонка для кнопки -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="171"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <!-- Изображение (раскомментируйте при необходимости) -->
                            <!--<Image Width="180" Height="100" Margin="10,5,10,5" Source="/Resourced/logobaza.png"/>-->

                            <StackPanel Grid.Column="1" Margin="5,5,5,5">
                                <TextBlock Text="{Binding nazvaie_vakansii}" FontWeight="Bold"/>
                                <TextBlock>
                                    <Run Text="{Binding Path=rabotadatel.naimenovaine_company}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Описание: "/>
                                    <Run Text="{Binding Opisanie}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Адрес: "/>
                                    <Run Text="{Binding Path=rabotadatel.address}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Опыт работы:"/>
                                    <Run Text="{Binding trebovanie}"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="0,5,0,5" 
                                      Width="146" VerticalAlignment="Center">
                                <Run Text="Зарплата:"/>
                                <Run Text="{Binding zarplata1}"/>
                            </TextBlock>

                            <!-- Кнопка отклика -->
                            <Button Grid.Column="3" 
                                    x:Name="response"
                                    
                                   Content="Откликнуться" 
                                   Margin="2" 
                                   Padding="5"
                                   Click="Button_Click"
                                   Tag="{Binding id_vakansiy}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFDDDDDD"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label x:Name="text1" Content="Label" HorizontalAlignment="Left" 
              Margin="56,0,0,46" VerticalAlignment="Bottom" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Label x:Name="lblCount" Grid.Column="4" Content="Label" 
              HorizontalAlignment="Left" Margin="24,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
    </Grid>
</Page>
